{
  "providerId": "smtpkit.com",
  "providerName": "SMTPKit",
  "serviceId": "domain-auth",
  "serviceName": "SMTPKit Email Authentication",
  "version": 2,
  "logoUrl": "https://smtpkit.com/og-image.png",
  "description": "Configure SPF, DKIM, DMARC, and MX records for SMTPKit email sending service",
  "variableDescription": "The variable %smtpkit_code% is a unique verification token. %dkim_selector% is the DKIM selector for the public key placement (dynamically generated). %dkim_public_key% is the DKIM public key. %dmarc_value% is the complete DMARC policy value.",
  "syncPubKeyDomain": "smtpkit.com",
  "syncRedirectDomain": "sync.smtpkit.com",
  "warnPhishing": true,
  "records": [
    {
      "type": "TXT",
      "host": "_smtpkit",
      "data": "%smtpkit_code%",
      "ttl": 3600
    },
    {
      "type": "SPFM",
      "host": "@",
      "spfRules": "include:smtpkit.com"
    },
    {
      "type": "TXT",
      "host": "%dkim_selector%._domainkey",
      "data": "%dkim_public_key%",
      "ttl": 3600
    },
    {
      "type": "TXT",
      "host": "_dmarc",
      "data": "%dmarc_value%",
      "txtConflictMatchingMode": "All",
      "ttl": 3600
    },
    {
      "type": "MX",
      "host": "@",
      "pointsTo": "mx.smtpkit.com",
      "priority": 10,
      "ttl": 3600
    }
  ]
}
