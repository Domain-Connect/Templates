{
  "providerId": "pulseguard",
  "providerName": "PulseGuard",
  "serviceId": "emailsecurity",
  "serviceName": "Email Security",
  "version": 1,
  "syncBlock": false,
  "syncPubKeyDomain": "pulseguard.pro",
  "logoUrl": "https://ipulse.one/_next/image?url=%2Flogodark.png&w=256&q=75",
  "description": "Configure email security records (SPF, DKIM, DMARC) for your domain",
  "records": [
    {
      "groupId": "spf",
      "type": "SPFM",
      "host": "@",
      "spfRules": "include:_spf.ipulse.one",
      "ttl": 3600
    },
    {
      "groupId": "dmarc",
      "type": "TXT",
      "host": "_dmarc",
      "data": "v=DMARC1; p=quarantine; rua=mailto:dmarc@ipulse.one",
      "ttl": 3600,
      "txtConflictMatchingMode": "All",
      "essential": "OnApply"
    }
  ]
}
