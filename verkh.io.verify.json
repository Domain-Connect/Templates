{
  "providerId": "verkh.io",
  "providerName": "Verkh",
  "serviceId": "verify",
  "serviceName": "Domain Verification",
  "description": "Add a TXT record to verify domain ownership for Verkh",
  "variableDescription": "token: Unique verification token provided by Verkh",
  "syncPubKeyDomain": "_domainconnect.verkh.io",
  "syncRedirectDomain": "verkh.io",
  "syncBlock": false,
  "shared": false,
  "multiInstance": false,
  "version": 1,
  "logoUrl": "https://verkh.io/logo.svg",
  "hostRequired": false,
  "warnPhishing": false,
  "records": [
    {
      "type": "TXT",
      "host": "@",
      "data": "verkh-verification=%token%",
      "ttl": 3600,
      "txtConflictMatchingMode": "Prefix",
      "txtConflictMatchingPrefix": "verkh-verification="
    }
  ]
}
