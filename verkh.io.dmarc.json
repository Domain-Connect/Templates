{
  "providerId": "verkh.io",
  "serviceId": "dmarc",
  "name": "DMARC Email Authentication",
  "description": "Configure DMARC policy to protect your domain from email spoofing",
  "variableDescription": "Set your DMARC policy and reporting preferences",
  "syncPubKeyDomain": "_domainconnect.verkh.io",
  "syncRedirectDomain": "verkh.io",
  "syncBlock": false,
  "shared": false,
  "multiInstance": false,
  "version": 1,
  "logoUrl": "https://verkh.io/logo.svg",
  "hostRequired": false,
  "warnPhishing": false,
  "variables": [
    {
      "name": "policy",
      "display": "DMARC Policy",
      "description": "The DMARC policy (none, quarantine, reject)",
      "default": "none",
      "required": true,
      "type": "string"
    },
    {
      "name": "pct",
      "display": "Percentage",
      "description": "Percentage of messages to apply policy to",
      "default": "100",
      "required": false,
      "type": "string"
    }
  ],
  "records": [
    {
      "type": "TXT",
      "host": "_dmarc",
      "data": "v=DMARC1; p=%policy%; pct=%pct%",
      "ttl": 3600,
      "txtConflictMatchingMode": "All",
      "essential": "Always"
    }
  ]
}
