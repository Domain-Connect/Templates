{
  "providerId": "mailrelay.com",
  "providerName": "Mailrelay.com",
  "serviceId": "email",
  "serviceName": "Email Authentication with Tracking",
  "version": 1,
  "logoUrl": "https://mailrelay.com/images/logo.svg",
  "syncPubKeyDomain": "mailrelay.com",
  "description": "Configure email authentication (SPF, DKIM, DMARC) and tracking domain for Mailrelay.com email service.",
  "variableDescription": "spf_include: SPF include rule; dkim1_target: DKIM CNAME target 1; dkim2_target: DKIM CNAME target 2; tracking_subdomain: Subdomain for tracking; tracking_target: Target domain for tracking",
  "records": [
    {
      "groupId": "spf",
      "type": "SPFM",
      "host": "@",
      "spfRules": "%spf_include%",
      "ttl": 3600
    },
    {
      "groupId": "dkim",
      "type": "CNAME",
      "host": "ipz1._domainkey",
      "pointsTo": "%dkim1_target%",
      "ttl": 3600
    },
    {
      "groupId": "dkim",
      "type": "CNAME",
      "host": "ipz2._domainkey",
      "pointsTo": "%dkim2_target%",
      "ttl": 3600
    },
    {
      "groupId": "dmarc",
      "type": "TXT",
      "host": "_dmarc",
      "data": "v=DMARC1; p=none;",
      "ttl": 3600,
      "txtConflictMatchingMode": "All",
      "essential": "OnApply"
    },
    {
      "groupId": "tracking",
      "type": "CNAME",
      "host": "%tracking_subdomain%",
      "pointsTo": "%tracking_target%",
      "ttl": 3600
    }
  ]
}
