{
  "providerId": "verkh.io",
  "providerName": "Verkh",
  "serviceId": "dmarc-reporting",
  "serviceName": "DMARC with Reporting",
  "description": "Configure DMARC policy with aggregate reporting to Verkh",
  "variableDescription": "policy: DMARC policy (none, quarantine, reject). rua: Report email address. pct: Percentage (default 100)",
  "syncPubKeyDomain": "_domainconnect.verkh.io",
  "syncRedirectDomain": "verkh.io",
  "syncBlock": false,
  "shared": false,
  "multiInstance": false,
  "version": 1,
  "logoUrl": "https://verkh.io/logo.svg",
  "hostRequired": false,
  "warnPhishing": false,
  "records": [
    {
      "type": "TXT",
      "host": "_dmarc",
      "data": "v=DMARC1; p=%policy%; pct=%pct%; rua=mailto:%rua%",
      "ttl": 3600,
      "txtConflictMatchingMode": "All",
      "essential": "Always"
    }
  ]
}
