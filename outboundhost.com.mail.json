{
  "providerId": "outboundhost.com",
  "providerName": "OutboundHost",
  "serviceId": "mail",
  "serviceName": "Email Service",
  "version": 1,
  "logoUrl": "https://outboundhost.com/logo.svg",
  "description": "Configure DNS records for OutboundHost managed email service including MX, SPF, DKIM, and DMARC",
  "variableDescription": "DKIM selector and public key for email authentication",
  "syncPubKeyDomain": "outboundhost.com",
  "syncRedirectDomain": "outboundhost.com",
  "shared": false,
  "variables": [
    {
      "name": "selector",
      "type": "string",
      "description": "DKIM selector identifier",
      "defaultValue": "default"
    },
    {
      "name": "publicKey",
      "type": "string",
      "description": "DKIM public key (base64 encoded)"
    }
  ],
  "records": [
    {
      "type": "MX",
      "host": "@",
      "pointsTo": "mx1.outboundhost.com",
      "priority": 10,
      "ttl": 3600,
      "essential": "Always"
    },
    {
      "type": "MX",
      "host": "@",
      "pointsTo": "mx2.outboundhost.com",
      "priority": 20,
      "ttl": 3600,
      "essential": "Always"
    },
    {
      "type": "TXT",
      "host": "@",
      "data": "v=spf1 include:spf.outboundhost.com ~all",
      "ttl": 3600,
      "essential": "Always"
    },
    {
      "type": "TXT",
      "host": "%selector%._domainkey",
      "data": "v=DKIM1; k=rsa; p=%publicKey%",
      "ttl": 3600,
      "essential": "Always"
    },
    {
      "type": "TXT",
      "host": "_dmarc",
      "data": "v=DMARC1; p=none; rua=mailto:dmarc-reports@outboundhost.com",
      "ttl": 3600,
      "essential": "Always"
    }
  ]
}
