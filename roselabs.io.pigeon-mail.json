{
    "providerId": "roselabs.io",
    "providerName": "Rose Labs",
    "serviceId": "pigeon-mail",
    "serviceName": "Pigeon Email",
    "version": 1,
    "syncPubKeyDomain": "roselabs.io",
    "syncRedirectDomain": "pigeon.roselabs.io",
    "description": "Configure DNS records for Pigeon transactional email service. Adds verification and DKIM records for email authentication.",
    "logoUrl": "https://pigeon.roselabs.io/pigeon-logo.png",
    "variableDescription": "verifyToken is your domain verification token. dkim1, dkim2, dkim3 are your DKIM selectors from AWS SES.",
    "records": [
        {
            "type": "TXT",
            "host": "_pigeon",
            "data": "pigeon-verify=%verifyToken%",
            "ttl": 3600
        },
        {
            "type": "CNAME",
            "host": "%dkim1%._domainkey",
            "pointsTo": "%dkim1%.dkim.amazonses.com",
            "ttl": 3600
        },
        {
            "type": "CNAME",
            "host": "%dkim2%._domainkey",
            "pointsTo": "%dkim2%.dkim.amazonses.com",
            "ttl": 3600
        },
        {
            "type": "CNAME",
            "host": "%dkim3%._domainkey",
            "pointsTo": "%dkim3%.dkim.amazonses.com",
            "ttl": 3600
        }
    ]
}
