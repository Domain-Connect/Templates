{
  "providerId": "mimeprotect.com",
  "providerName": "MimeProtect",
  "serviceId": "mta-sts",
  "serviceName": "MimeProtect MTA-STS",
  "version": 1,
  "logoUrl": "https://mimeprotect.com/logo.svg",
  "syncPubKeyDomain": "zone.mimeprotect.com",
  "syncRedirectDomain": "mimeprotect.com",
  "description": "Enable MTA-STS (Mail Transfer Agent Strict Transport Security) to enforce TLS encryption for incoming email.",
  "variableDescription": "%domain%: Your domain name",
  "records": [
    {
      "type": "CNAME",
      "host": "_mta-sts",
      "pointsTo": "_mta-sts.%domain%.zone.mimeprotect.com",
      "ttl": 600,
      "essential": "OnApply"
    },
    {
      "type": "CNAME",
      "host": "mta-sts",
      "pointsTo": "cname.mimeprotect.com",
      "ttl": 3600,
      "essential": "OnApply"
    }
  ]
}
