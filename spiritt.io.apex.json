{
  "providerId": "spiritt.io",
  "providerName": "SPIRITT",
  "serviceId": "apex",
  "serviceName": "SPIRITT Custom Domain",
  "version": 1,
  "logoUrl": "https://spiritt.io/img/spiritt-logo.png",
  "description": "Connect a domain to a SPIRITT app",
  "syncBlock": false,
  "syncPubKeyDomain": "domainconnect.spiritt.io",
  "syncRedirectDomain": "joystick.spiritt.io,spiritt.io",
  "variableDescription": "`ipv4` is the IPv4 address provided by spiritt.io. `appId` is the SPIRITT internal appId provided by spiritt.io.",
  "records": [
    {
      "type": "A",
      "host": "@",
      "pointsTo": "%ipv4%",
      "ttl": 3600
    },
    {
      "type": "TXT",
      "host": "_spiritt-verify",
      "data": "spiritt-verify=%appId%",
      "ttl": 3600
    }
  ]
}
