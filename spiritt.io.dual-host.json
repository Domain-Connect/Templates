{
  "providerId": "spiritt.io",
  "providerName": "SPIRITT",
  "serviceId": "dual-host",
  "serviceName": "SPIRITT Custom Domain with Subdomain",
  "version": 1,
  "logoUrl": "https://spiritt.io/img/spiritt-logo.png",
  "description": "Connect a domain and subdomain to a SPIRITT app",
  "syncBlock": false,
  "syncPubKeyDomain": "domainconnect.spiritt.io",
  "syncRedirectDomain": "joystick.spiritt.app, spiritt.app",
  "variableDescription": "%host1% and %host2%: Hosts under this domain. %appId%: SPIRITT app id.",
  "records": [
    {
      "type": "A",
      "host": "%host1%",
      "pointsTo": "34.120.252.68",
      "ttl": 3600
    },
    {
      "type": "A",
      "host": "%host2%",
      "pointsTo": "34.120.252.68",
      "ttl": 3600
    },
    {
      "type": "TXT",
      "host": "_spiritt-verify",
      "data": "spiritt-verify=%appId%",
      "ttl": 3600
    }
  ]
}
