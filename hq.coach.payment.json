{
    "providerId": "hq.coach",
    "providerName": "HQ Coach",
    "serviceId": "payment",
    "serviceName": "HQ Coach Payments",
    "version": 1,
    "logoUrl": "https://hq.coach/logo.svg",
    "description": "Connect your custom subdomain to HQ Coach for payment links and invoices. Your payment pages will be served directly on your subdomain (e.g., pay.yourdomain.com).",
    "variableDescription": "%host%: Your subdomain prefix (e.g., 'pay', 'payments', 'checkout')",
    "hostRequired": true,
    "multiInstance": true,
    "records": [
        {
            "type": "CNAME",
            "host": "%host%",
            "pointsTo": "proxy.hq.coach",
            "ttl": 3600
        }
    ]
}
